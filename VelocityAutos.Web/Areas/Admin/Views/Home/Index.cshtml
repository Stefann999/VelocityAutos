@using VelocityAutos.Services.Data.Interfaces
@inject IUserService UserService

﻿@{
    ViewData["Title"] = "Home Page";
}

@{
    string fullName = UserService.GetFullNameByIdAsync(this.User.GetId()).Result;
    string firstName = fullName.Split(' ')[0];
}

<head>
    <style>
        body {
            background-image: none;
        }

        .home-text {
            font-size: 0;
        }
    </style>
</head>

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, @firstName!</h2>
    <p class="lead mb-1 mt-3">
        Here is your admin panel. You can <b>check</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> cars.
    </p>
    <p class="lead mt-1">
        Additionally, you can see <b>all users</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Car" asp-action="All"
       class="btn btn-primary btn-lg">All Cars</a>
    <a asp-area="" asp-controller="Car" asp-action="Add"
       class="btn btn-primary btn-lg">Add Car</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Car" asp-action="Mine"
       class="btn btn-primary btn-lg">My Cars</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Car" asp-action="CarsDashboard"
       class="btn btn-primary btn-lg">Cars Dashboard</a>
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>