@model PostFormModel

@{
    ViewData["Title"] = "Add Car";
}

<style>
    body {
        background-image: none;
    }

    .home-text {
        font-size: 0px;
    }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Add a Car</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Add" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.Car.Make">Make:</label>
                                    <input asp-for="@Model.Car.Make" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Make" class="small text-danger"></span>
                                </div>

                                 <div class="form-group">
                                    <label asp-for="@Model.FirstName">First name:</label>
                                    <input asp-for="@Model.FirstName" class="form-control" />
                                    <span asp-validation-for="@Model.FirstName" class="small text-danger"></span>

                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.LastName">Last Name:</label>
                                    <input asp-for="@Model.LastName" class="form-control" />
                                    <span asp-validation-for="@Model.LastName" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.PhoneNumber">Phone Number:</label>
                                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                                    <span asp-validation-for="@Model.PhoneNumber" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.EmailAddress">Email Address: (optional)</label>
                                    <input asp-for="@Model.EmailAddress" class="form-control" />
                                    <span asp-validation-for="@Model.EmailAddress" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Model">Model:</label>
                                    <input asp-for="@Model.Car.Model" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Model" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Price">Price:</label>
                                    <input asp-for="@Model.Car.Price" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Price" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Month">Month:</label>
                                    <input asp-for="@Model.Car.Month" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Month" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Year">Year:</label>
                                    <input asp-for="@Model.Car.Year" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Year" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Mileage">Mileage:</label>
                                    <input asp-for="@Model.Car.Mileage" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Mileage" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.HorsePower">Horse Power:</label>
                                    <input asp-for="@Model.Car.HorsePower" class="form-control" />
                                    <span asp-validation-for="@Model.Car.HorsePower" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.FuelConsumption">Fuel Consumption:</label>
                                    <input asp-for="@Model.Car.FuelConsumption" class="form-control" />
                                    <span asp-validation-for="@Model.Car.FuelConsumption" class="small text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="@Model.Car.Color">Color:</label>
                                    <input asp-for="@Model.Car.Color" class="form-control" />
                                    <span asp-validation-for="@Model.Car.Color" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.Description">Description: (optional)</label>
                                    <textarea asp-for="@Model.Car.Description" class="form-control"></textarea>
                                    <span asp-validation-for="@Model.Car.Description" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.LocationCity">Location City:</label>
                                    <input asp-for="@Model.Car.LocationCity" class="form-control" />
                                    <span asp-validation-for="@Model.Car.LocationCity" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.LocationCountry">Location Country:</label>
                                    <input asp-for="@Model.Car.LocationCountry" class="form-control" />
                                    <span asp-validation-for="@Model.Car.LocationCountry" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.CategoryId"></label>
                                    <select asp-for="@Model.Car.CategoryId" class="form-control">
                                        @foreach (var category in Model.Car.Categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="@Model.Car.CategoryId" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.FuelTypeId"></label>
                                    <select asp-for="@Model.Car.FuelTypeId" class="form-control">
                                        @foreach (var fuelType in Model.Car.FuelTypes)
                                        {
                                            <option value="@fuelType.Id">@fuelType.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="@Model.Car.FuelTypeId" class="small text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="@Model.Car.TransmissionTypeId"></label>
                                    <select asp-for="@Model.Car.TransmissionTypeId" class="form-control">
                                        @foreach (var transmissionType in Model.Car.TransmissionTypes)
                                        {
                                            <option value="@transmissionType.Id">@transmissionType.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="@Model.Car.TransmissionTypeId" class="small text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="@Model.Car.Images">Upload Images:</label>
                                    <input asp-for="@Model.Car.Images" type="file" class="form-control" multiple />
                                    <span asp-validation-for="@Model.Car.Images" class="small text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <input class="btn btn-primary mt-3" type="submit" value="Add car" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}