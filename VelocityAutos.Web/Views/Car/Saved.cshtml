@using VelocityAutos.Services.Data.Interfaces
@using VelocityAutos.Web.Infrastructure.Extensions
@model IEnumerable<CarAllViewModel>

@inject IPostService PostService

@{
    ViewData["Title"] = "Saved cars";
}

<head>
    <link rel="stylesheet" href="~/css/allCars.css" />
    <style>
        .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 10px;
        }
    </style>
</head>

<div class="header">
    <h1>Saved cars</h1>
    <strong>Here are shown all of the cars you have saved!</strong>
</div>

<div class="car-container">

    @if (Model.Count() == 0)
    {
        <div class="center">
            <h2>You have not saved any cars yet!</h2>
            <a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-primary">Browse cars</a>
        </div>
    }

    @foreach (var car in Model)
    {
        @await Html.PartialAsync("~/Views/Shared/_CarPartial.cshtml", car)
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}